<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/countrydata_shap">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/country_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/bowlby_one"
                    android:text="Country Name"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout

                        android:layout_width="120dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/total_Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Total cases"
                            android:textAlignment="center"
                            android:textColor="@color/colorTotalConfiremd" />


                        <TextView
                            android:id="@+id/coutnry_case"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/total_Title"
                            android:fontFamily="@font/poppins_bold"
                            android:text="123212312"
                            android:textAlignment="center"
                            android:textColor="@color/colorTotalConfiremd"
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp">

                        <TextView
                            android:id="@+id/total_deathTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Today cases"
                            android:textAlignment="center"
                            android:textColor="@color/ColorToday_Case" />

                        <TextView
                            android:id="@+id/coutnryToday_case"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/total_deathTitle"
                            android:fontFamily="@font/poppins_bold"
                            android:text="123212312"
                            android:textAlignment="center"
                            android:textColor="@color/ColorToday_Case"
                            android:textSize="20dp" />
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Total Deaths"
                    android:textAlignment="center"
                    android:textColor="@color/colorTotalDeath" />

                <TextView
                    android:id="@+id/coutnryTotal_deaths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="123212312"
                    android:textAlignment="center"
                    android:textColor="@color/colorTotalDeath"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/todayDeaths_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Today Deaths"
                            android:textAlignment="center"
                            android:textColor="@color/colorTodayDeaths" />

                        <TextView
                            android:id="@+id/coutnryToday_deaths"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/todayDeaths_title"
                            android:fontFamily="@font/poppins_bold"
                            android:text="123212312"
                            android:textAlignment="center"
                            android:textColor="@color/colorTodayDeaths"
                            android:textSize="20dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp">

                        <TextView
                            android:id="@+id/totaldeaths_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Total Recovered"
                            android:textAlignment="center"
                            android:textColor="@color/colorTotalRecoverd" />

                        <TextView
                            android:id="@+id/coutnryTotal_Recovered"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/totaldeaths_title"
                            android:fontFamily="@font/poppins_bold"
                            android:text="123212312"
                            android:textAlignment="center"
                            android:textColor="@color/colorTotalRecoverd"
                            android:textSize="20dp" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Critical"
                    android:textAlignment="center"
                    android:textColor="@color/ColorCritcal" />

                <TextView
                    android:id="@+id/coutnry_critical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="123212312"
                    android:textAlignment="center"
                    android:textColor="@color/ColorCritcal"
                    android:textSize="20dp" />


            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>