<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="10dp"
        android:background="@drawable/bg_border_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/recycleview_bg" >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/hospital" />
        </RelativeLayout>


        <RelativeLayout
           android:layout_toEndOf="@+id/img"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/call_hospital_list_btn"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/hospitalName"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"

                android:text="Hospital"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/hospitaAddress"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hospitalName"
                android:fontFamily="@font/poppins_light"
                android:text="Address"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/hospitalContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hospitaAddress"
                android:fontFamily="@font/poppins_light"
                android:text="contact" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/call_hospital_list_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="@drawable/symp_btn_shap">
            <ImageView
                android:background="@drawable/phonecall"
                android:layout_centerInParent="true"
                android:layout_width="30dp"
                android:layout_height="25dp"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>